<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.camprecapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.student.EditStudentProfile" />
        <activity
            android:name=".features.company.CompanyAddJob"
            android:parentActivityName=".features.company.fragment.CompanyJobs" />
        <activity android:name=".features.company.CompanyHome" />
        <activity android:name=".features.company.CompanySignUp" />
        <activity android:name=".features.student.StudentHome" />
        <activity android:name=".features.student.StudentSignUp" />
        <activity android:name=".features.student.StudentJobApplication" />
        <activity android:name=".features.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.JobApplicationDetailActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>