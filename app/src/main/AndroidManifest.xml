<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.camprecapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.company.CompanyAddJob"
            android:parentActivityName=".features.company.fragment.CompanyJobs"/>
        <activity android:name=".features.company.fragment.CompanyJobs"
            android:launchMode="singleTop"/>
        <activity android:name=".features.company.fragment.CompanyViewSubApplication" />
        <activity android:name=".features.company.CompanyHome" />
        <activity android:name=".features.company.fragment.ViewCompanyProfile" />
        <activity android:name=".features.company.CompanySignUp" />
        <activity android:name=".features.student.ViewStudentProfile" />
        <activity android:name=".features.student.StudentViewJobs" />
        <activity android:name=".features.student.StudentHome" />
        <activity android:name=".features.student.StudentSignUp" />
        <activity android:name=".features.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>